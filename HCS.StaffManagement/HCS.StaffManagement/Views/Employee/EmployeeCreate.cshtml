                                                </label>
                                                @Html.TextBoxFor(Model => Model.BasicWages.BonusPercentage, new { @class = "form-control DigitOnlyValidation", maxlength = 5 })
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group label-floating">
                                                <label class="control-label">
                                                    Incentive
                                                </label>
                                                @Html.TextBoxFor(Model => Model.BasicWages.IncentivePercentage, new { @class = "form-control DigitOnlyValidation", maxlength = 7 })
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group label-floating">
                                                <label class="control-label">
                                                    Wages
                                                </label>
                                                @Html.TextBoxFor(Model => Model.BasicWages.Wages, new { @class = "form-control DigitOnlyValidation", maxlength = 7 })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>*@

                            <div class="card">
                                <div class="card-header bg-info">
                                    <b>PF and ESI</b>
                                </div>
                                <div class="row col-sm-12">
                                    <div class="col-sm-3">
                                        <div class="form-group label-floating">
                                            <label class="control-label">
                                                PF No.
                                            </label>
                                            @Html.TextBoxFor(Model => Model.PFNo, new { @class = "form-control", maxlength = 30 })
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group label-floating">
                                            <label class="control-label">
                                                ESI No.
                                            </label>
                                            @Html.TextBoxFor(Model => Model.ESINo, new { @class = "form-control", maxlength = 25 })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="wizard-footer">
                        <div class="float-right">
                            <input type='button' class='btn btn-next btn-fill btn-rose btn-wd' name='next' value='Next' />
                            <input type='submit' class='btn btn-finish btn-fill btn-rose btn-wd' id="btnSaveEmployee" name='finish' value='Finish' />
                        </div>
                        <div class="float-left">
                            <input type='button' class='btn btn-previous btn-fill btn-default btn-wd' name='previous' value='Previous' />
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    @*</form>*@
                                                    }
            </div>
        </div><!-- wizard container -->
    </div>
</div>
<script>
    var EmployeeObj = @Html.Raw(Json.Encode(@Model));
</script>
