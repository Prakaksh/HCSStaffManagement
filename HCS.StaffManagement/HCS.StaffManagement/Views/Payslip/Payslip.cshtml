@*@model HCS.StaffManagement.Models.PayScale*@

@{
    ViewBag.Title = "Payslip";
    Layout = "~/Views/Shared/_AdminLandingPage.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h2 style="text-align:left; color:green"><b>Generate Payslip</b></h2>
        </div>
    </div>
    <div class="row divWidth">
        <div class="col-md-12">
            <div class="card">
                <div class="row col-md-12">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="form-group">
                            <label class="label-control">Date Picker</label>
                            @*datepicker*@
                            <input type="text" class="form-control datepicker" id="dtPayslipFor" value="10/07/2018" />
                        </div>
                        @*<select class="selectpicker" data-style="btn btn-primary btn-round" title="Single Select" data-size="7">
                                <option disabled selected>Select Year & Month</option>
                                <option value="2018-June">Employee 1</option>
                                <option value="2018-May">Employee 2</option>
                            </select>*@
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        @*selectpicker*@
                        <select class="" data-style="btn btn-primary btn-round" id="ddlEmployee" title="Single Select" data-size="7">
                            <option disabled selected>Select Employee</option>
                            <option value="CA3AEBEB-2A0A-40F9-A6F7-17EDC8B43F04">Employee 1</option>
                            <option value="CA3AEBEB-2A0A-40F9-A6F7-17EDC8B43F02">Employee 2</option>
                        </select>
                    </div>
                </div>
                <div class="" id="divPaysliContent">
                    <form id="frmPayslip" action="" method="get">
                        <!--<div>
                            <div class="card-header card-header-icon" data-background-color="green">
                                <i class="material-icons">description</i>  <b>   Input Data    </b>
                            </div>
                        </div>-->
                        <!-- <h4 class="card-title">Employee List</h4> -->
                        <div class="">
                            <div class="row col-md-12">
                                <div class="col-md-6">
                                    <div class="card">
                                        <!--<form id="Earnings" action="" method="">-->
                                        <div class="card-header card-header-icon" data-background-color="rose">
                                            <i class="material-icons">attach_money</i><b>Earnings</b>
                                        </div>
                                        <div class="card-content">
                                            @*<h4 class="card-title">Earnings</h4>*@
                                            <div class="form-group label-floating">
                                                <label class="control-label">
                                                    Working Days
                                                    <small>*</small>
                                                </label>
                                                <input class="form-control DigitOnlyValidation" name="days" id="txtWorkingDays" type="text" required="true" />
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group label-floating">
                                                        <label class="control-label">
                                                            Basic
                                                            <small>*</small>
                                                        </label>
                                                        <input class="form-control earnings" name="txtBasicPerDay" id="txtBasicPerDay" type="text" required />
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group label-floating">
                                                        <label class="control-label">
                                                            Total Basic
                                                        </label>
                                                        <input class="form-control earnings" name="txtBasicPerMonth" id="txtBasicPerMonth" type="text" readonly tabindex="-1" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group label-floating">
                                                        <label class="control-label">
                                                            Wages D.A
                                                            <small>*</small>
                                                        </label>
                                                        <input class="form-control earnings" name="txtWagesDAPerDay" id="txtWagesDAPerDay" type="text" required />
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group label-floating">
                                                        <label class="control-label">
                                                            Total Wages D.A
                                                        </label>
                                                        <input class="form-control earnings" name="txtWagesDAPerMonth" id="txtWagesDAPerMonth" type="text" readonly tabindex="-1" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group label-floating">
                                                <label class="control-label">
                                                    Incentive
                                                </label>
                                                <input class="form-control earnings" name="txtIncentivePerMonth" id="txtIncentivePerMonth" type="text" />
                                            </div>
                                            <div class="text-right">
                                                <div class="form-group label-floating text-right">
                                                    <div id="lblEarnings">0.00</div>
                                                </div>
                                            </div>
                                        </div>
                                        <!--</form>-->
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="card">
                                        <!--<form id="Deductions" action="" method="">-->
                                        <div class="card-header card-header-icon" data-background-color="rose">
                                            <i class="material-icons">money_off</i><b> Deductions</b>
                                        </div>
                                        <div class="card-content">
                                            <h4 class="card-title"></h4>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group label-floating">
                                                        <label class="control-label">
                                                            Advance
                                                        </label>
                                                        <input class="form-control deductions" name="txtAdvance" id="txtAdvance" type="text" />
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group label-floating">
                                                        <label class="control-label">
                                                            F.Adavance
                                                        </label>
                                                        <input class="form-control deductions" name="txtFutureAdvance" id="txtFutureAdvance" type="text" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group label-floating">
                                                        <label class="control-label">
                                                            P.F
                                                            <small>*</small>
                                                        </label>
                                                        <input class="form-control deductions" name="txtPF" id="txtPF" type="text" required />
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group label-floating">
                                                        <label class="control-label">
                                                            E.S.I
                                                            <small>*</small>
                                                        </label>
                                                        <input class="form-control deductions" name="txtESI" id="txtESI" type="text" required />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group label-floating">
                                                        <label class="control-label">
                                                            L.I.C
                                                            <small>*</small>
                                                        </label>
                                                        <input class="form-control deductions" name="txtLIC" id="txtLIC" type="text" />
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group label-floating">
                                                        <label class="control-label">
                                                            P.T
                                                        </label>
                                                        <input class="form-control deductions" name="txtPT" id="txtPT" type="text" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group label-floating">
                                                        <label class="control-label">
                                                            W.W.F
                                                        </label>
                                                        <input class="form-control deductions" name="txtWWF" id="txtWWF" type="text" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="text-right">
                                                <div class="form-group label-floating text-right">
                                                    <div id="lblDeductions">0.00</div>
                                                </div>
                                            </div>
                                        </div>
                                        <!--</form>-->
                                    </div>
                                </div>
                            </div>
                            <div class="container-fluid">
                                <div class="row col-md-12">
                                    <div class="col-md-6">
                                        <div class="text-right">
                                            <div class="form-group label-floating text-left">
                                                <div id="lblNetPay">Net Pay: &nbsp;<span id="spnGross">0.00</span></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-footer text-right">
                                            <button type="button" id="btnGenerate" name="btnGenerate" class="btn btn-rose btn-fill">Generate</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/Payslip/Payslip.js")"></script>