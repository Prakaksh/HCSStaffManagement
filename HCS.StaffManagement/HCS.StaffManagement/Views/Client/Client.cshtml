@model HCS.StaffManagement.Models.Client

@{
    ViewBag.Title = "Client";
    Layout = "~/Views/Shared/_AdminLandingPage.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="container-fluid">
            <div class="row">
                <button class="btn btn-outline-dark btn-dark" id="btnaddClient">
                    <i class="material-icons">person_add</i>
                    Add Client
                </button>
            </div>

            <table id="tblGetClient" class="table-style table-striped table-bordered nowrap" style="width:100%"></table>

        </div>
    </div>
</div>
@Html.HiddenFor(Model => Model.OrganizationClientID);
<div class="modal fade" tabindex="-1" role="dialog" id="ClientUpateModal">
    <div class="modal-dialog modal-lg" role="document">
        <form action="" id="formClientUpdate">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <div class="row col-md-12">
                        <div class="col-md-4">
                            <div class="form-group label-floating">
                                <label class="control-label">
                                    Client Name
                                    <small>*</small>
                                </label>
                                @Html.TextBoxFor(Model => Model.ClientName, new { @class = "form-control", required = "true", maxlength = 100 })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group label-floating">
                                <label class="control-label">
                                    GSTIN No.
                                    <small>*</small>
                                </label>
                                @Html.TextBoxFor(Model => Model.ClientGSTIN, new { @class = "form-control", required = "true", maxlength = 15 })
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group label-floating">
                                <label class="control-label">
                                    Client Address 1
                                </label>
                                @Html.TextBoxFor(Model => Model.ClientAddress1, new { @class = "form-control", maxlength = 150 })
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group label-floating">
                                <label class="control-label">
                                    Client Address 2
                                </label>
                                @Html.TextBoxFor(Model => Model.ClientAddress2, new { @class = "form-control", maxlength = 150 })
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group label-floating">
                                <label class="control-label">
                                    Select Country
                                </label>
                                <select name="ddlCountry" id="CountryStateID" class="form-control" disabled></select>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group label-floating is-empty is-focused">
                                <label class="control-label">
                                    Select State
                                </label>
                                <select name="ddlState" id="ddlState" class="form-control"></select>
                                @Html.HiddenFor(Model => Model.CountryStateID)
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group label-floating">
                                <label class="control-label">
                                    City
                                </label>
                                @Html.TextBoxFor(Model => Model.City, new { @class = "form-control", maxlength = 50 })
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group label-floating">
                                <label class="control-label">
                                    Pin Code
                                </label>
                                @Html.TextBoxFor(Model => Model.PinCode, new { @class = "form-control DigitOnlyValidation", maxlength = 6, minlength = 6, autocomplete = "off" })
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group label-floating">
                                <label class="control-label">
                                    Mobile No.
                                    <small>*</small>
                                </label>
                                @Html.TextBoxFor(Model => Model.MobileNo, new { @class = "form-control DigitOnlyValidation", required = "true", minlength = 10, maxlength = 13 })
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group label-floating">
                                <label class="control-label">
                                    Contact No.
                                </label>
                                @Html.TextBoxFor(Model => Model.ContactNo, new { @class = "form-control DigitOnlyValidation", minlength = 10, maxlength = 13 })
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group label-floating">
                                <label class="control-label">
                                    Email ID
                                    <small>*</small>
                                </label>
                                @Html.TextBoxFor(Model => Model.EmailID, new { @class = "form-control", type = "Email", required = "required" })
                            </div>
                        </div>

                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="btnClientUpdate">Update Client</button>
                </div>
            </div><!-- /.modal-content -->
        </form>
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


<script src="@Url.Content("~/Scripts/AppScripts/Common.js")"></script>
<script src="@Url.Content("~/Scripts/Client/Client.js")"></script>